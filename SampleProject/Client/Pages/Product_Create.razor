@page "/Product_Create"
<h3>Product Create</h3>
<p>
    This component insert product data to the server.
</p>

<EditForm Model="@productVM" OnValidSubmit="Create" class="card card-body bg-light">
    <div class="mb-3 col-xl-5">
        <MudTextField @bind-Value="productVM.Name" Label="@productVM.Name" Variant="Variant.Outlined"></MudTextField>
    </div>
    <div class="mb-3 col-xl-5">
        <MudTextField @bind-Value="productVM.ShortDescription" Label="@productVM.ShortDescription" Variant="Variant.Outlined"></MudTextField>
    </div>
    <div class="mb-3 col-xl-5">
        <MudTextField @bind-Value="productVM.FullDescription" Label="@productVM.FullDescription" Variant="Variant.Outlined"></MudTextField>
    </div>
    <div class="mb-3 col-xl-5">
        <MudTextField @bind-Value="productVM.AdminComment" Label="@productVM.AdminComment" Variant="Variant.Outlined"></MudTextField>
    </div>
    <div class="mb-3 col-xl-5">
        <MudButton ButtonType=ButtonType.Submit Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" IconColor="Color.Info" Size="Size.Large">Save</MudButton>
    </div>
</EditForm>



