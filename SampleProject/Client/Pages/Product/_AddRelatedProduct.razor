@using SampleProject.Shared.Dtos.Product;
<MudDataGrid T="ProductDto" Hover=true MultiSelection=true Hideable=true ServerData="LoadServerData" ReadOnly="true"
             SortMode="SortMode.Multiple" SelectedItemsChanged="@SelectedItemsChanged"
             Bordered="true" Dense="true">
    <Columns>
        <SelectColumn T="ProductDto" ShowInFooter=false />
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.ShortDescription" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="ProductDto" RowsPerPageString="Elements per page"></MudDataGridPager>
    </PagerContent>
</MudDataGrid>
<MudPaper Elevation="25">
    <footer>
        <MudIconButton Icon="@Icons.Material.Outlined.Save" OnClick="btnSave"
                       ButtonType="ButtonType.Submit" />
    </footer>
</MudPaper>



